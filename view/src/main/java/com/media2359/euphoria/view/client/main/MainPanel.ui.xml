<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:project="urn:import:com.media2359.euphoria.view.client.project">

	<ui:style>
		.centerMargin {
			margin: 10px;
		}
		
		.header {
			font-family: verdana, "Trebuchet MS", lucida, arial, helvetica,
				sans-serif;
			background-color: black;
			background-image: url("/images/header_bg.gif");
			background-repeat: repeat-x;
		}
		
		.header-left {
			background: url(../images/header_branding.jpg) no-repeat;
			display: block;
			padding-left: 100px;
			width: 70%
		}
		
		.header-right {
			font-size: 13px;
			text-align: right;
			color: white;
			padding: 5px;
			display: block;
			cursor: pointer;
		}
	</ui:style>


	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="dashboardConfig">
		<ui:attributes text="Dashboard    " />
	</ui:with>

	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="manpowerConfig">
		<ui:attributes text="Manpower     " />
	</ui:with>

	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="staffConfig">
		<ui:attributes text="Projects     " />
	</ui:with>

	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="staffrollConfig">
		<ui:attributes text="Staff Roll   " />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.container.MarginData"
		field="outerData" />
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData"
		field="northData">
	</ui:with>	
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData"
		field="westData">
		<ui:attributes size="0.15" collapsible="true" split="true" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData"
		field="centerData">
		<ui:attributes size="0.85"/>
	</ui:with>	
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData"
		field="eastData">
		<ui:attributes size="-1" hidden="true" />
	</ui:with>	
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData"
		field="southData" />

	<container:Viewport>
		<container:child layoutData="{outerData}">
			<container:BorderLayoutContainer
				ui:field="con" borders="true" width="100%">
				<container:north layoutData="{northData}">
					<container:HorizontalLayoutContainer
						styleName="{style.header}" width="100%">
						<container:child>
							<container:SimpleContainer styleName="{style.header-left}">
							</container:SimpleContainer>
						</container:child>
						<container:child>
							<container:SimpleContainer styleName="{style.header-right}">
								<g:Hyperlink ui:field="logout" text="Logout" />
							</container:SimpleContainer>
						</container:child>
					</container:HorizontalLayoutContainer>
				</container:north>
				<container:west layoutData="{westData}">
					<gxt:ContentPanel width="100%">

					</gxt:ContentPanel>
				</container:west>
				<container:center layoutData="{centerData}">
					<gxt:TabPanel width="100%">
						<gxt:child config="{dashboardConfig}">
							<project:ProjectSummaryPanel/>
						</gxt:child>
						<gxt:child config="{manpowerConfig}">
							<g:Label text="Test message"></g:Label>
						</gxt:child>
						<gxt:child config="{staffConfig}">
							<g:Label text="Test message"></g:Label>
						</gxt:child>
						<gxt:child config="{staffrollConfig}">
							<g:Label text="Test message"></g:Label>
						</gxt:child>
					</gxt:TabPanel>
				</container:center>
				<container:east layoutData="{eastData}">
					<gxt:ContentPanel width="100%" />
				</container:east>
				<container:south layoutData="{southData}">
					<gxt:ContentPanel width="100%" />
				</container:south>
			</container:BorderLayoutContainer>
		</container:child>
	</container:Viewport>
</ui:UiBinder>
